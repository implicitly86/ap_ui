{
    "compilerOptions": {
      "outDir": "./build/",
      "sourceMap": true,
      "strict": true,
      "module": "es2015",
      "moduleResolution": "node",
      "target": "es5",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noImplicitAny": false,
      "skipDefaultLibCheck": true,
      "skipLibCheck": true,
      "jsx": "react",
      "lib": [
        "es5",
        "es6",
        "dom"
      ]
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ]
}
